{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "repeat": ["2021", "2022", "2023"],
  "columns": 1,
  "spec": {
    "width": 400,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/yuhang0123/Homework-9-Dataset/refs/heads/main/Investment%20Assets%20Performance.csv"
    },
    "layer": [
      {
        "mark": {"type":"bar", "cornerRadius": 4},
        "encoding": {
          "x": {
            "field": "Asset",
            "type": "nominal",
            "title": "Investment Asset",
            "axis": {"labelAngle": -30}
          },
          "y": {
            "field": {"repeat": "repeat"},
            "type": "quantitative",
            "title": "Annual Return",
            "axis": {"format": ".0%"}
          },
          "color": {
            "field": "Asset",
            "type": "nominal",
            "legend": null,
            "scale": {
            "domain": ["Bitcoin", "Bonds", "Commodities", "Emerging Markets", "Gold", "High Yield Corporate Bonds"],
            "range": ["Yellow", "Red", "lightblue", "darkblue", "Goldenrod", "Blue"]
          }
          },
          "tooltip": [
            {"field": "Asset", "type": "nominal", "title": "Asset"},
            {
              "field": {"repeat": "repeat"},
              "type": "quantitative",
              "title": "Annual Return",
              "format": ".1%"
            }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "top",
          "dx": 200,
          "dy": -175,
          "fontSize": 18,
          "fontWeight": "bold",
          "color": "black"
        },
        "encoding": {
          "text": {"datum": {"repeat": "repeat"}}
        }
      } 
    ]
  },
  "config": {
    "view": {"stroke": "transparent"},
    "axis": {"labelFontSize": 12, "titleFontSize": 13},
    "title": {"fontSize": 18, "fontWeight": "bold"}
  }
}
